# Note: 
# binary search, bit manipulation
# corner cases; integer overflow

class Solution(object):
    def divide(self, dividend, divisor):
        """
        :type dividend: int
        :type divisor: int
        :rtype: int
        """
        a = dividend; b = divisor
        if a == (-2**31) and b == -1:
            return 2 ** 31 - 1
        if b == 0:
            return None
        if a == 0:
            return 0
        if (a > 0 and b < 0) or (a < 0 and b > 0):
            sign = -1
        else:
            sign = 1
        a = long(abs(a)); b = long(abs(b)) # why long?
        r_int = 0
        while a >= b:
            cnt = 0
            while a >= (b << cnt):
                cnt += 1
            cnt -= 1
            a -= (b << cnt)
            r_int += (1 << cnt)
        return sign * r_int
